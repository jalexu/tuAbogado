<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="384dp"
            android:layout_height="17dp"
            android:id="@+id/progressBar"
            android:indeterminate="true"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.454"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="151dp" app:srcCompat="@drawable/logo_01"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Registrarse"
            android:layout_width="155dp"
            android:layout_height="55dp"
            android:id="@+id/btnRegistro"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/btnRecordarClave"
            android:layout_marginEnd="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnInicioSesion" app:layout_constraintHorizontal_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="16sp"/>
    <TextView
            android:text="Email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textNumeroIdent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintHorizontal_bias="1.0" android:textSize="17sp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="Clave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textClave"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="17sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editEmail"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editClave" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textClave" android:hint="Ingrese clave de tu abogado..."
            android:textSize="18sp"/>
    <Button
            android:text="Recordar Clave"
            android:layout_width="155dp"
            android:layout_height="55dp"
            android:id="@+id/btnRecordarClave" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/btnInicioSesion"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="16sp"
            android:layout_marginEnd="24dp"/>
    <Button
            android:text="Iniciar SesiÃ³n"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:id="@+id/btnInicioSesion" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/editClave"
            android:background="#60c8d8" android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" app:layout_constraintHorizontal_bias="0.539"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:hint="Ingrese su correo..."
            app:layout_constraintTop_toBottomOf="@+id/textNumeroIdent"/>
</android.support.constraint.ConstraintLayout>